{
	"scripts": {
		"dev": "node server.js",
		"check-all": "npm run format-code && npm run lint-styles && npm run lint-scripts",
		"fix-all": "npm run fix-styles && npm run fix-scripts",
		"format-code": "prettier  --check --write \"public/**\"",
		"lint-styles": "stylelint \"public/styles/**/*.css\"",
		"fix-styles": "stylelint \"public/styles/**/*.css\" --fix",
		"lint-scripts": "eslint \"public/scripts/**/*.js\"",
		"fix-scripts": "eslint \"public/scripts/**/*.js\" --fix",
		"compile-scss": "sass --watch public/scss:public/styles"
	},
	"devDependencies": {
		"eslint": "^8.23.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.3.0",
		"eslint-plugin-promise": "^6.0.1",
		"server": "^1.1.0",
		"prettier": "^2.7.1",
		"stylelint": "^14.12.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^28.0.0",
		"sass": "^1.56.1"
	}
}

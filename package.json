{
	"scripts": {
		"dev": "node server.js",
		"check-all": "npm run format-code && npm run lint-scss && npm run lint-styles && npm run lint-scripts",
		"format-code": "prettier --check --write \"public/**\"",
		"lint-styles": "stylelint \"public/styles/**/*.css\" --fix",
		"lint-scss": "stylelint \"public/scss/**/*.scss\" --fix",
		"lint-scripts": "eslint \"public/scripts/**/*.js\" --fix",
		"compile-scss": "sass --watch public/scss:public/styles"
	},
	"devDependencies": {
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.2.5",
		"eslint-plugin-promise": "^6.0.1",
		"live-server": "^1.1.0",
		"prettier": "^2.7.1",
		"sass": "^1.56.1",
		"stylelint": "^14.15.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^28.0.0",
		"stylelint-config-standard-scss": "^6.1.0",
		"stylelint-scss": "^4.3.0"
	}
}
